@model WS_checklist.Models.Form

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Form</legend>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

    <div class="display-label">DateModified</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateModified)</div>

    <div class="display-label">Sections</div>
    <div class="display-field">@(Model.Sections == null ? "None" : Model.Sections.Count.ToString())</div>

    <div class="display-label">SiteVisits</div>
    <div class="display-field">@(Model.SiteVisits == null ? "None" : Model.SiteVisits.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.FormID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


