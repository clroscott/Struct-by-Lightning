@model WS_checklist.Models.SiteActionItem

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>SiteActionItem</legend>

    <div class="display-label">LocationID</div>
    <div class="display-field">@Model.LocationID</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

    <div class="display-label">Complete</div>
    <div class="display-field">@Model.Complete</div>

    <div class="display-label">LocationCopy</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.LocationCopy).ToString()</div>

    <div class="display-label">SiteVisit</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.SiteVisit).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ActionID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


