@model Checklist.Models.Answer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Answer</legend>

        @Html.HiddenFor(model => model.AnswerID)

        <div class="editor-label">
            @Html.LabelFor(model => model.SiteVisitID, "SiteVisit")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SiteVisitID", String.Empty)
            @Html.ValidationMessageFor(model => model.SiteVisitID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionID, "Question")
        </div>
        <div class="editor-field">
            @Html.DropDownList("QuestionID", String.Empty)
            @Html.ValidationMessageFor(model => model.QuestionID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Rating)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Rating)
            @Html.ValidationMessageFor(model => model.Rating)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
